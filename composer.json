{
	"name": "manychois/wp-wpx",
	"description": "A utility library for overriding WordPress default HTML output easily",
	"keywords": [ "wordpress" ],
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Siu Pang Tommy Choi",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.0",
		"manychois/views": ">=0.1.1",
		"ivopetkov/html5-dom-document-php": ">=2.0.1"
	},
	"require-dev": {
		"php": ">=7.0",
		"phpunit/phpunit": "7.5.*",
		"johnpbloch/wordpress-core": "5.1.0"
	},
	"autoload": {
		"psr-4": { "Manychois\\Wpx\\": "src/" }
	},
	"autoload-dev": {
		"psr-4": { "Manychois\\Wpx\\Tests\\": "tests/" }
	},
	"scripts": {
		"unit-test":  "vendor/bin/phpunit"
	}
}